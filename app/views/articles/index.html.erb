<h1 class="text-center mt-4">My Articles</h1>
<div class="row d-flex justify-content-center gap-2 bg-light p-5 mt-4 ms-5 me-5 rounded border border-light shadow-sm">
<div class="d-flex alert alert-primary w-50">
  <ul class="list-unstyled w-100">
    <% @articles.each do |article| %>
      <li class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center pb-3 border-bottom shadow">
          <div class="d-flex justify-content center">
            <%= link_to article.title, article_path(article), class: "text-decoration-none text-light fs-4" %>
          </div>
          <div>
            <button class="btn btn-primary me-2">
              <%= link_to "update task", edit_article_path(article), class: "text-decoration-none text-light" %>
            </button>
            <button class="btn btn-danger">
              <%= link_to "Delete", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-light" %>
            </button>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center w-50">
<span class="btn btn-primary btn-lg w-75" ><%= link_to "create task", new_article_path %></span>
</div>


</div>
